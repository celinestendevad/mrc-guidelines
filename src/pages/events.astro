---
import Layout from "../layouts/Layout.astro";
import PageHeader from "../components/PageHeader.astro";
import SectionIntro from "../components/SectionIntro.astro";
import PageContainer from "../components/PageContainer.astro";

const title = "Events";
const currentPage = "events";
---

<Layout {title} {currentPage}>
  <PageHeader pageNumber="11" heading="Events" />
   <PageContainer>
   <SectionIntro
    text="Events bring the global Mikkeller Running Club community together — from weekly trainings and local traditions to international tours. Whether it’s a First Saturday run or a trip across the world, our events keep the MRC spirit alive everywhere."
  />
</PageContainer>
</Layout>…