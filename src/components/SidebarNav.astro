---
const { currentPage = "" } = Astro.props;
---

<aside
  class="sidebar-nav"
  style="
    width: 240px;
    min-width: 200px;
    background: #FFF;
    border-right: 1px solid var(--primaer-clr);
    padding-right: 0%;
    position: sticky;
    top: 0;
    height: fit-content;
    font-family: var(--ff-main);
    display: flex;
    flex-direction: column;
  "
>
  <!-- LOGO Ã˜VERST -->
  <div style="text-align: center; margin-bottom: 0rem;">
    <a href="/" style="display: inline-block;">
   <img
  src="/img/logo.svg"
  alt="Mikkeller Running Club logo"
  width="65"
  height="20"
  style="height: auto; margin-top: 1rem"
/>
  </a>

    <!-- DIVIDER UNDER LOGO -->
    <div
      style="
        width: 100%;
        height: 1px;
        background: var(--primaer-clr);
        margin-top: 1.5rem;
        margin-left: 0;
        margin-right: 0;
      "
    ></div>
  </div>

  <!-- NAVIGATION LINKS -->
  <nav
    style="
      display: flex;
      flex-direction: column;
      gap: 1.4rem;
      font-family: var(--ff-main);
      font-size: 0.8rem;
      padding: 2rem 2rem;
    "
  >
    <a href="/" class={currentPage === "index" ? "active" : ""}>01 Brand Guidelines</a>
    <a href="/brand-story" class={currentPage === "brand-story" ? "active" : ""}>02 Brand story</a>
    <a href="/become-captain" class={currentPage === "become-captain" ? "active" : ""}>03 Become a captain</a>
    <a href="/logo" class={currentPage === "logo" ? "active" : ""}>04 Logo</a>
    <a href="/graphics" class={currentPage === "graphics" ? "active" : ""}>05 Graphics</a>
    <a href="/typography" class={currentPage === "typography" ? "active" : ""}>06 Typography</a>
    <a href="/colours" class={currentPage === "colours" ? "active" : ""}>07 Colours</a>
    <a href="/social-media" class={currentPage === "social-media" ? "active" : ""}>08 Social media</a>
    <a href="/merch" class={currentPage === "merch" ? "active" : ""}>09 Merch</a>
    <a href="/photography" class={currentPage === "photography" ? "active" : ""}>10 Photography</a>
    <a href="/events" class={currentPage === "events" ? "active" : ""}>11 Events</a>
    <a href="/communication" class={currentPage === "communication" ? "active" : ""}>12 Communication</a>
  </nav>

  <!-- FOOTER TEKST -->
  <p
    style="
      margin-top: 1.5rem;
      font-size: 0.7rem;
      color: var(--text-clr);
      opacity: 0.8;
      text-align: center;
      margin-bottom: 4rem;
    "
  >
    UPDATED DECEMBER 15, 2025
  </p>
</aside>

<style>
  @media (max-width: 800px) {
     .sidebar-nav {
    display: none !important;
    }
  }
</style>