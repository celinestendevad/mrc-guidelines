---
const { text = "", image = "" } = Astro.props;
---

<style>
.section-intro {
  position: relative;
  margin-top: 96px;
}

.section-intro__heading {
  max-width: 900px;
  text-transform: uppercase;
  margin: 0;
  opacity: 0;
  transform: translateY(20px);
  animation: fadeInUp 1s ease forwards;
  z-index: 1;
  position: relative;
}

/* illustration */
.section-intro__image {
  position: absolute;
  right: -80px;
  bottom: -20px;
  width: 160px;
  z-index: 0;
  pointer-events: none;
}

/* line */
.section-intro__line {
  margin-top: 96px;
  height: 1px;
  width: 0;
  background-color: var(--primaer-clr);
  animation: drawLine 1s ease forwards 0.5s;
}

/* animations */
@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes drawLine {
  to {
    width: calc(100% + 200px);
    margin-left: -100px;
  }
}

/* MOBILE */
@media (max-width: 800px) {
  .section-intro__image {
    width: 110px;
    right: -20px;
    bottom: -10px;
    opacity: 0.6;
  }

  .section-intro__line {
    animation: drawLineMobile 1s ease forwards 0.5s;
  }
}

@keyframes drawLineMobile {
  to {
    width: calc(100% + 80px);
    margin-left: -40px;
  }
}
</style>

<section class="section-intro">
  <h2 class="section-intro__heading">{text}</h2>

  {image && (
    <img
      src={image}
      alt=""
      class="section-intro__image"
      aria-hidden="true"
    />
  )}

  <div class="section-intro__line"></div>
</section>
