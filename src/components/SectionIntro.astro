---
const { text = "", image = "" } = Astro.props;
---

<style>
.section-intro {
  margin-top: 96px;
  position: relative;
  overflow: visible; /* vigtigt */
}

  .section-intro__heading {
    text-transform: uppercase;
    margin: 0;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 1s ease forwards;

      max-width: 100%;

  }

  /* BILLEDE – ligger ovenpå */
.section-intro__image {
  position: absolute;
  bottom: 0;
  width: 160px;   
  right: -100px;  
  max-width: none;
  margin-right: 1rem;
  pointer-events: none;
  opacity: 0;
  transform: translateY(20px);
  animation: fadeInUp 1s ease forwards 0.2s;
}


 .section-intro__image img {
  width: 100%;
  height: auto;
  display: block;
}

  /* STREGEN */
  .section-intro__line {
    margin-top: 96px;
    height: 1px;
    width: 0;
    margin-left: 0;
    background-color: var(--primaer-clr);
    animation: drawLine 1s ease forwards 0.5s;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes drawLine {
    to {
      width: calc(100% + 200px);
      margin-left: -100px;
    }
  }

  @media (max-width: 800px) {
    .section-intro__image {
   display: none;
  }

    @keyframes drawLineMobile {
      to {
        width: calc(100% + 80px);
        margin-left: -40px;
      }
    }

    .section-intro__line {
      animation: drawLineMobile 1s ease forwards 0.5s;
    }
  }
</style>

<section class="section-intro">
  <h2 class="section-intro__heading">{text}</h2>

  {image && (
    <div class="section-intro__image">
      <img src={image} alt="">
    </div>
  )}

  <div class="section-intro__line"></div>
</section>
